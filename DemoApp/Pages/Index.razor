@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<div>
    <button class="btn btn-primary" @onclick="OnShow">Show modal</button>
    <h6 class="alert-info">@modalStatus</h6>
</div>

<DemoLibrary.Modal 
    Title="Modal dialog" 
    Show="showModal" 
    OnCancel="@(() => OnModalButtonClick("Cancel pressed."))"
    OnConfirm="@(() => OnModalButtonClick("Confirm pressed."))">
    <p>
        <strong>This is a simple modal dialog.</strong>
    </p>
</DemoLibrary.Modal>

@code
{
    private bool showModal = false;
    private string modalStatus = string.Empty;

    private void OnShow() => showModal = true;

    private void OnModalButtonClick(string message)
    {
        showModal = false;
        modalStatus = message;
    }
}