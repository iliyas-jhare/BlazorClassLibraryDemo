<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <PropertyGroup>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<PackageOutputPath>c:\local-nuget-feed</PackageOutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>DemoLibrary</PackageId>
    <Version>1.0.0-alpha01</Version>
    <Authors>Mohammad.Jhare@someting.com</Authors>
    <Company>Mohammad Jhare Limited</Company>
    <Description>This is a Razor component library with a cool modal window component.</Description>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.9" />
  </ItemGroup>

</Project>
